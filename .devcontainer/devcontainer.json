{
    "name": "cluster-ansible",
    "dockerFile": "Dockerfile",
    "context": "..",
    "build": {
        "args": {
            "USER_NAME": "${localEnv:REMOTE_USER}",
            "USER_UID": "${localEnv:REMOTE_UID}",
            "USER_GID": "${localEnv:REMOTE_GID}"
        }
    },
    "appPort": [8000],
    "mounts": [
        "source=${localEnv:HOME}/.ssh/config,target=/home/${localEnv:REMOTE_USER}/.ssh/config,type=bind,readonly"
    ],
    "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "redhat.vscode-yaml",
        "redhat.ansible",
        "ms-vscode-remote.remote-containers",
        "ms-vscode-remote.remote-ssh",
        "ms-vscode-remote.remote-ssh-edit",
        "ms-vscode-remote.remote-ssh-explorer",
        "ms-python.python"
    ],
    "settings": {
        "python.venvPath": "/home/${localEnv:REMOTE_USER}/.env",
        "formatOnSave": true
    },
    "postCreateCommand": "echo 'source /home/${localEnv:REMOTE_USER}/.venv/bin/activate' >> /home/${localEnv:REMOTE_USER}/.bashrc"
}